<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="3dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_marginLeft="14dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imagenCarpoolero"
        android:src="@drawable/milton_casco"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="origen:nuÃ±ez"
                android:id="@+id/textView_origen"
                android:textSize="22sp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="destino:USAL"
                android:id="@+id/textViewDestino"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:textSize="22sp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:00"
            android:id="@+id/textView_Horario"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:textSize="22sp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>